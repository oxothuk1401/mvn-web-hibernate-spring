<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="info" name="MyApp" packages="">
  <Appenders>
    <File name="MyFile" fileName="c:\log.log">
      <PatternLayout pattern = "%m%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="MyFile"/>
    </Root>
  </Loggers>
</Configuration>